$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: CenterMiddle;
  Group {
    FlexWeight: 1;
  }
  $C.@DecoratedContainer {

    #Title {
      Group {
        LayoutMode: Left;

        $C.@Title {
          @Text = "Better Item Viewer";
        }

        Group {
          FlexWeight: 1;
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ConfigurationSection {
        LayoutMode: Top;
        Padding: (Right: 10);

        Label {
          Text: "Mods";
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #ModFilter {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Categories";
          Padding: (Top: 10);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #CategoryFilter {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Sorting";
          Padding: (Top: 10);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #SortMode {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Settings";
          Padding: (Top: 30);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@CheckBoxWithLabel #ShowHiddenItems {
          @Text = "Show Hidden Items";
          Padding: (Top: 4);
        }

        $C.@CheckBoxWithLabel #AltKeybind {
          @Text = "Enable 'Alt' Keybind";
          Padding: (Top: 4, Bottom: 4);
        }

        $C.@DropdownBox #GridLayout {
          Anchor: (Width: 280, Height: 24);
        }
      }

      Group #ListSection {
        LayoutMode: Top;

        Group #ItemSection {
          LayoutMode: Top;
        }

        Group #PaginationControls {
          LayoutMode: Center;
          Padding: (Top: 10, Bottom: 10);
          Anchor: (Height: 40);

          TextButton #PrevPageButton {
            Anchor: (Width: 150, Height: 24);
            Text: "Prev";
            Style: $C.@SecondaryTextButtonStyle;
            Background: #1a1a1a(0.6);
            Padding: (Full: 8);
          }

          Label #PaginationInfo {
            Anchor: (Width: 100);
            Style: (
              FontSize: 18,
              TextColor: #aaaaaa,
              Alignment: Center,
              RenderBold: true
            );
          }

          TextButton #NextPageButton {
            Anchor: (Width: 150, Height: 24);
            Text: "Next";
            Style: $C.@SecondaryTextButtonStyle;
            Background: #1a1a1a(0.6);
            Padding: (Full: 8);
          }
        }
      }

      Group #ItemInfoSection {
        LayoutMode: Top;

        Padding: (Left: 10);
        Group #ItemInfo {
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemTitle {
            Visible: false;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
            LayoutMode: Left;
            Group {
              ItemIcon #ItemIcon {
                Anchor: (Width: 96, Height: 96, Right: 5);
                Visible: true;
              }
            }

            Group {
              Padding: (Left: 10);
              LayoutMode: Top;
              Label #ItemName {
                Style: (
                  FontSize: 30,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }

              Label #ItemId {
                Style: (
                  FontSize: 12,
                  TextColor: #aaaaaa
                );
              }
            }
          }

          Group #ItemStats {
            Visible: false;
            LayoutMode: Top;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
          }
        }
      }
    }
  }
  Group {
    FlexWeight: 1;
  }
}

$C.@BackButton {}
