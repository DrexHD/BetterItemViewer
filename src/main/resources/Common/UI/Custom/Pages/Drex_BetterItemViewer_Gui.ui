$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: CenterMiddle;
  Group {
    FlexWeight: 1;
  }
  $C.@DecoratedContainer {

    #Title {
      Group {
        LayoutMode: Left;

        $C.@Title {
          @Text = "Better Item Viewer";
        }

      }
    }

    #Content {
      LayoutMode: Left;

      Group #ConfigurationSection {
        LayoutMode: Top;
        Padding: (Right: 10);

        Group {
          @MarginRight = 10;

          Anchor: (Width: 280, Left: 4);

          CompactTextField #SearchInput {
            Anchor: (Height: 30, Right: @MarginRight);
            CollapsedWidth: 280;
            ExpandedWidth: 280;
            PlaceholderText: %server.customUI.searchPlaceholder;
            Style: (FontSize: 16);
            PlaceholderStyle: (TextColor: #3d5a85, RenderUppercase: true, FontSize: 14);
            Padding: (Horizontal: 12, Left: 34);
            Decoration: (
              Default: (
                Icon: (Texture: "../Common/SearchIcon.png", Width: 16, Height: 16, Offset: 9),
                ClearButtonStyle: @ClearButtonStyle
              )
            );
          }
        }

        Label #ModFilterLabel {
          Text: "Mods";
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #ModFilter {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Categories";
          Padding: (Top: 10);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #CategoryFilter {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Sorting";
          Padding: (Top: 10);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #SortMode {
          Anchor: (Width: 280, Height: 30);
        }

        Label {
          Text: "Filters";
          Padding: (Top: 10);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@DropdownBox #FilterCraftable {
          Anchor: (Width: 280, Height: 30);
        }

        $C.@DropdownBox #FilterPinned {
          Anchor: (Width: 280, Height: 30, Top: 2);
        }

        TextButton #ResetFiltersButton {
          TextTooltipStyle: $C.@DefaultTextTooltipStyle;
          TooltipText: "Reset all active item filters";
          Anchor: (Width: 140, Height: 24, Left: 0, Top: 10);
          Text: "Reset Filters";
          Style: (
            ...$C.@CancelTextButtonStyle
          );
        }

        Label {
          Text: "Settings";
          Padding: (Top: 30);
          Style: (
            FontSize: 18,
            RenderBold: true
          );
        }

        $C.@CheckBoxWithLabel #ShowSalvager {
          @Text = "Show Salvager Recipes";
          Padding: (Top: 2);
        }

        $C.@CheckBoxWithLabel #ShowHiddenItems {
          @Text = "Show Hidden Items";
          Padding: (Top: 2);
        }

        $C.@CheckBoxWithLabel #ShowCreatorInfo {
          @Text = "Show Creator Info";
          Padding: (Top: 2);
        }

        $C.@CheckBoxWithLabel #AltKeybind {
          @Text = "Enable 'Alt' Keybind";
          Padding: (Top: 2, Bottom: 4);
        }

        $C.@DropdownBox #GridLayout {
          Anchor: (Width: 280, Height: 24);
        }
      }

      Group #ListSection {
        LayoutMode: Top;

        Group #ItemSection {
          LayoutMode: Top;
        }

        Group #PaginationControls {
          LayoutMode: Center;
          Padding: (Top: 10, Bottom: 10);
          Anchor: (Height: 40);

          TextButton #PrevPageButton {
            Anchor: (Width: 150, Height: 24);
            Text: "Prev";
            Style: (
              ...$C.@SecondaryTextButtonStyle,
              Sounds: $C.@ButtonSounds
            );
            Background: #1a1a1a(0.6);
            Padding: (Full: 8);
          }

          Label #PaginationInfo {
            Anchor: (Width: 100);
            Style: (
              FontSize: 18,
              TextColor: #aaaaaa,
              Alignment: Center,
              RenderBold: true
            );
          }

          TextButton #NextPageButton {
            Anchor: (Width: 150, Height: 24);
            Text: "Next";
            Style: (
              ...$C.@SecondaryTextButtonStyle,
              Sounds: $C.@ButtonSounds
            );
            Background: #1a1a1a(0.6);
            Padding: (Full: 8);
          }
        }
      }

      Group #ItemInfoSection {
        LayoutMode: Top;

        Padding: (Left: 10);
        Group #ItemInfo {
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemTitle {
            Visible: false;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
            LayoutMode: Left;
            Group {
              ItemIcon #ItemIcon {
                Anchor: (Width: 96, Height: 96, Right: 5);
                Visible: true;
              }
            }

            Group {
              Padding: (Left: 10);
              LayoutMode: Top;
              Label #ItemName {
                Style: (
                  FontSize: 30,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }

              Label #ItemId {
                Style: (
                  FontSize: 12,
                  TextColor: #aaaaaa
                );
              }

              Group {
                LayoutMode: Left;

                TextButton #GiveItemButton {
                  TextTooltipStyle: $C.@DefaultTextTooltipStyle;
                  TooltipText: "You need to be OP, or in creative to use this!";
                  Anchor: (Width: 90, Height: 24);
                  Text: "Give Item";
                  Style: (
                    ...$C.@SmallSecondaryTextButtonStyle,
                    Sounds: $C.@ButtonSounds
                  );
                }

                Group {
                  Padding: (Left: 8);
                }

                TextButton #GiveItemStackButton {
                  TextTooltipStyle: $C.@DefaultTextTooltipStyle;
                  TooltipText: "You need to be OP, or in creative to use this!";
                  Anchor: (Width: 100, Height: 24);
                  Text: "Give Stack";
                  Style: (
                    ...$C.@SmallSecondaryTextButtonStyle,
                    Sounds: $C.@ButtonSounds
                  );
                }
              }

            }
          }

          Group #ItemStats {
            Visible: false;
            LayoutMode: Top;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
          }
        }
      }
    }
  }
  Group {
    FlexWeight: 1;
  }
}

$C.@BackButton {}
