$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1650, Height: 830);

    #Title {
      Group {
        $C.@Title {
          @Text = "Better Item Viewer";
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ItemSection {
        FlexWeight: 1;
        Anchor: (Bottom: 10);
        LayoutMode: TopScrolling;
        ScrollbarStyle: (...$C.@DefaultScrollbarStyle, Size: 12);

        Visible: true;
      }

      Group {
        LayoutMode: Top;
        Anchor: (Width: 600);

        Padding: (Left: 10);
        Group #ItemInfo {
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemTitle {
            Visible: false;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
            LayoutMode: Left;
            Group {
              ItemIcon #ItemIcon {
                Anchor: (Width: 96, Height: 96, Right: 5);
                Visible: true;
              }
            }

            Group {
              Padding: (Left: 10);
              LayoutMode: Top;
              Label #ItemName {
                Style: (
                  FontSize: 30,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }

              Label #ItemId {
                Style: (
                  FontSize: 12,
                  TextColor: #aaaaaa
                );
              }
            }
          }

          Group #ItemStats {
            Visible: false;
            LayoutMode: Top;
            Background: (Color: #1a1a1a(0.6));
            Padding: (Full: 10);
          }
        }
      }
    }
  }
}

$C.@BackButton {}