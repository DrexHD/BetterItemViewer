$C = "../Common.ui";

AssetImage {
  Anchor: (Bottom: 0, Right: 0);

  Button #ItemButton {
    LayoutMode: Top;
    Style: (
      Hovered: (
        Background: #2a2a2a(0.4),
      ),
      Pressed: (
        Background: #3a3a3a(0.4),
      ),
      Sounds: $C.@ButtonSounds
    );

    ItemIcon #ItemIcon {
      Anchor: (Width: 34, Height: 34);
    }
  }
}
